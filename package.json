{
  "name": "vue-ssr-jest",
  "version": "1.0.0",
  "description": "Vue.js start kit project integrating `vue-server-renderer`, `vuex`, `vue-router`, `vue-bootstrap`,`webpack 4`,`jest`,...",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node server",
    "dev": "node server",
    "unit": "jest",
    "lint": "eslint --ext .js,.vue src test/unit/specs",
    "build": "rimraf public && npm run build:client && npm run build:server",
    "build:client": "cross-env NODE_ENV=production webpack --config build/webpack.client.config.js --progress --hide-modules",
    "build:server": "cross-env NODE_ENV=production webpack --config build/webpack.server.config.js --progress --hide-modules"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nnquangit/vue-ssr-jest.git"
  },
  "author": "nnquangit@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nnquangit/vue-ssr-jest/issues"
  },
  "homepage": "https://github.com/nnquangit/vue-ssr-jest#readme",
  "dependencies": {
    "express": "^4.16.3",
    "axios": "^0.18.0",
    "jquery": "^3.3.1",
    "js-cookie": "^2.2.0",
    "lru-cache": "^4.1.3",
    "vue": "^2.5.16",
    "vue-router": "^3.0.1",
    "vue-server-renderer": "^2.5.16",
    "vuex": "^3.0.1",
    "vuex-persistedstate": "^2.5.4",
    "vuex-router-sync": "^5.0.0",
    "bootstrap-vue": "^2.0.0-rc.11",
    "@vue/test-utils": "^1.0.0-beta.18",
    "compression": "^1.7.2",
    "cookie-parser": "^1.4.3",
    "cross-env": "^5.1.6",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "autoprefixer": "^8.6.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^23.0.1",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "compression-webpack-plugin": "^1.1.11",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-html": "^4.0.3",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "file-loader": "^1.1.11",
    "hard-source-webpack-plugin": "^0.7.5",
    "jest": "^23.1.0",
    "jest-vue-preprocessor": "^1.4.0",
    "mini-css-extract-plugin": "^0.4.0",
    "postcss-import": "^11.1.0",
    "regenerator-runtime": "^0.11.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.3",
    "sw-precache-webpack-plugin": "^0.11.5",
    "url-loader": "^1.0.1",
    "vue-jest": "^2.6.0",
    "vue-loader": "^15.2.4",
    "vue-template-compiler": "^2.5.16",
    "babel-runtime": "^6.26.0",
    "node-sass": "4.9.0",
    "postcss-loader": "^2.1.5",
    "webpack": "^4.11.1",
    "webpack-cli": "^3.0.2",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.2",
    "webpack-merge": "^4.1.2",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      ".(css|scss|less)$": "<rootDir>/test/unit/__mocks__/noneMock.js"
    },
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/jest-vue-preprocessor"
    },
    "moduleDirectories": [
      "node_modules"
    ],
    "transformIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
